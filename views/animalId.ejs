<head>
    <title>
        <%= title %>
    </title>
</head>

<body>
    <%- include("partials/header") %>
        <div>
            <h3>
                <%= animal.name %>
            </h3>
            <p>Description: <%= animal.description %>
            </p>
            <p>Age: <%= animal.age %> | Price: <%= animal.price %> | Status: <%=animal.status %>
            </p>
            <button onclick="location.href = '/animals/<%= animal.id %>/edit'">Edit</button>
            <form action="/animals/<%= animal.id %>/delete" method="POST" onsubmit="return confirmDelete(this);"
                style="display:inline;">
                <input type="hidden" name="adminPassword" value="">
                <button type="submit">Delete</button>
            </form>
            <script>
                function confirmDelete(form) {
                    const pwd = window.prompt("Enter admin password to confirm deletion:");
                    if (!pwd) {
                        return false;
                    }
                    form.adminPassword.value = pwd;
                    return true;
                }
            </script>
        </div>
</body>